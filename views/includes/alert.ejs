<% const alerts = [ { messages: success, type: 'success' }, { messages: dlt,
type: 'danger' }, { messages: error, type: 'danger' } ]; %> <%
alerts.forEach(alert => { %> <% if (alert.messages && alert.messages.length > 0)
{ %>
<div
  class="alert alert-<%= alert.type %> alert-dismissible fade show auto-dismiss col-6 offset-3 mt-3"
  role="alert"
>
  <% alert.messages.forEach(function(msg) { %>
  <p class="mb-0"><%= msg %></p>
  <% }); %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% }); %>
