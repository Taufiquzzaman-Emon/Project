<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/signup.css" />

<div class="auth-page">
  <div class="auth-container">
    <!-- Background Elements -->
    <div class="auth-background">
      <div class="auth-orb orb-1"></div>
      <div class="auth-orb orb-2"></div>
      <div class="auth-orb orb-3"></div>
    </div>

    <!-- Main Auth Card -->
    <div class="auth-card">
      <div class="auth-card-inner">
        <!-- Header Section -->
        <div class="auth-header">
          <div class="auth-icon">
            <i class="fas fa-user-plus"></i>
          </div>
          <h1 class="auth-title">Join Voyago</h1>
          <p class="auth-subtitle">
            Create your account and start your travel journey
          </p>
        </div>

        <!-- Social Login Section -->
        <div class="social-auth-section">
          <div class="social-auth-grid">
            <button
              class="social-btn google-btn"
              type="button"
              onclick="socialLogin('google')"
            >
              <div class="social-icon">
                <i class="fab fa-google"></i>
              </div>
              <span class="social-text">Continue with Google</span>
              <div class="social-ripple"></div>
            </button>
          </div>
        </div>

        <!-- Divider -->
        <div class="auth-divider">
          <div class="divider-line"></div>
          <span class="divider-text">Or continue with email</span>
          <div class="divider-line"></div>
        </div>

        <!-- Registration Form -->
        <form
          action="/register"
          method="POST"
          class="auth-form needs-validation"
          id="signup-form"
          novalidate
        >
          <!-- Username Field -->
          <div class="form-group">
            <label for="username" class="form-label">
              <i class="fas fa-user me-2"></i>Username
            </label>
            <div class="input-container">
              <input
                type="text"
                class="form-control enhanced-input"
                id="username"
                name="username"
                placeholder="Choose a username"
                required
                autocomplete="username"
              />
              <div class="input-icon">
                <i class="fas fa-user"></i>
              </div>
              <div class="input-validation">
                <i class="fas fa-check-circle valid-icon"></i>
                <i class="fas fa-exclamation-circle invalid-icon"></i>
              </div>
            </div>
            <div class="field-feedback">
              <div class="invalid-feedback">
                <i class="fas fa-exclamation-triangle me-1"></i>
                Please enter a valid username (3-20 characters, letters,
                numbers, and underscores only)
              </div>
              <div class="valid-feedback">
                <i class="fas fa-check-circle me-1"></i>
                Perfect username!
              </div>
            </div>
            <div class="field-helper">
              Username should be 3-20 characters long
            </div>
          </div>

          <!-- Email Field -->
          <div class="form-group">
            <label for="email" class="form-label">
              <i class="fas fa-envelope me-2"></i>Email Address
            </label>
            <div class="input-container">
              <input
                type="email"
                class="form-control enhanced-input"
                id="email"
                name="email"
                placeholder="you@example.com"
                required
                autocomplete="email"
              />
              <div class="input-icon">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="input-validation">
                <i class="fas fa-check-circle valid-icon"></i>
                <i class="fas fa-exclamation-circle invalid-icon"></i>
              </div>
            </div>
            <div class="field-feedback">
              <div class="invalid-feedback">
                <i class="fas fa-exclamation-triangle me-1"></i>
                Please enter a valid email address
              </div>
              <div class="valid-feedback">
                <i class="fas fa-check-circle me-1"></i>
                Great email address!
              </div>
            </div>
          </div>

          <!-- Password Field -->
          <div class="form-group">
            <label for="password" class="form-label">
              <i class="fas fa-lock me-2"></i>Password
            </label>
            <div class="input-container">
              <input
                type="password"
                class="form-control enhanced-input"
                id="password"
                name="password"
                placeholder="Create a secure password"
                minlength="6"
                required
                autocomplete="new-password"
              />
              <div class="input-icon">
                <i class="fas fa-lock"></i>
              </div>
              <button
                type="button"
                class="password-toggle"
                onclick="togglePassword()"
              >
                <i class="fas fa-eye" id="password-eye"></i>
              </button>
              <div class="input-validation">
                <i class="fas fa-check-circle valid-icon"></i>
                <i class="fas fa-exclamation-circle invalid-icon"></i>
              </div>
            </div>

            <!-- Password Strength Indicator -->
            <div class="password-strength">
              <div class="strength-bar">
                <div class="strength-fill" id="strength-fill"></div>
              </div>
              <div class="strength-text" id="strength-text">
                Password strength
              </div>
            </div>

            <div class="field-feedback">
              <div class="invalid-feedback">
                <i class="fas fa-exclamation-triangle me-1"></i>
                Password must be at least 6 characters long
              </div>
              <div class="valid-feedback">
                <i class="fas fa-check-circle me-1"></i>
                Strong password!
              </div>
            </div>

            <!-- Password Requirements -->
            <div class="password-requirements">
              <div class="requirement" id="req-length">
                <i class="fas fa-circle requirement-icon"></i>
                <span>At least 6 characters</span>
              </div>
              <div class="requirement" id="req-letter">
                <i class="fas fa-circle requirement-icon"></i>
                <span>One letter</span>
              </div>
              <div class="requirement" id="req-number">
                <i class="fas fa-circle requirement-icon"></i>
                <span>One number</span>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="form-group">
            <button type="submit" class="submit-btn" id="submit-btn">
              <span class="btn-content">
                <i class="fas fa-user-plus me-2"></i>
                Create Account
              </span>
              <span class="btn-loader">
                <i class="fas fa-spinner fa-spin"></i>
              </span>
              <div class="btn-glow"></div>
            </button>
          </div>
        </form>

        <!-- Login Link -->
        <div class="auth-footer">
          <p class="footer-text">
            Already have an account?
            <a href="/login" class="footer-link">Sign in instead</a>
          </p>
        </div>
      </div>
    </div>

    <!-- Security Features -->
    <div class="security-features">
      <div class="feature-item">
        <i class="fas fa-shield-alt"></i>
        <span>Secure & Encrypted</span>
      </div>
      <div class="feature-item">
        <i class="fas fa-user-shield"></i>
        <span>Privacy Protected</span>
      </div>
      <div class="feature-item">
        <i class="fas fa-globe"></i>
        <span>Global Community</span>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced JavaScript -->
<script src="/js/signup.js"></script>
