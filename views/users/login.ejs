<% layout("/layouts/boilerplate") %>

<div
  class="d-flex justify-content-center align-items-center min-vh-100 bg-light"
>
  <div
    class="card shadow-lg rounded-4 p-4"
    style="width: 100%; max-width: 450px"
  >
    <div class="card-body">
      <h2 class="text-center mb-4">Login</h2>
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder="Enter username"
            required
          />
        </div>
        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Enter password"
            minlength="6"
            required
          />
          <div class="invalid-feedback">
            Password must be at least 6 characters.
          </div>
        </div>

        <!-- Submit -->
        <div class="d-grid mb-3">
          <button type="submit" class="btn btn-primary rounded-pill">
            Login
          </button>
        </div>
      </form>

      <!-- Divider -->
      <div class="text-center text-muted my-3">OR</div>

      <!-- Social Logins -->
      <div class="d-grid gap-2">
        <a href="/auth/google" class="btn btn-danger rounded-pill">
          <i class="fab fa-google me-2"></i> Continue with Google
        </a>
        <a href="/auth/facebook" class="btn btn-primary rounded-pill">
          <i class="fab fa-facebook-f me-2"></i> Continue with Facebook
        </a>
      </div>

      <!-- Register link -->
      <p class="mt-3 text-center text-muted">
        Create account?
        <a href="/register" class="text-decoration-none">Register</a>
      </p>
    </div>
  </div>
</div>
